@model List<Empleado>

@{
    ViewData["Title"] = "Index";
}

<h1>Seguridad empleados</h1>

<table class="table table-bordered table-info">
    <thead>
        <tr>
            <th>ID</th>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
            <th>Departamento</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                <a asp-controller="Empleados"
                    asp-action="Details"
                    asp-route-idempleado="@item.IdEmpleado"
                    class="btn btn-warning">
                    Details
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
